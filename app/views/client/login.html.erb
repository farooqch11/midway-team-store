<!-- Outer Row -->
<div class="row justify-content-center">
  <div class="col-xl-4 col-lg-4 col-md-6">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-12">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
              </div>
              <form id="login-form" class="user" data-url="<%= process_login_path %>" method="POST">
                <div class="form-group">
                  <%= email_field_tag :email, "", :class=> "form-control form-control-user", :placeholder => "Enter Email Address..." %>
                </div>
                <div class="form-group">
                  <%= password_field_tag :password, "", :class=> "form-control form-control-user", :placeholder =>  "Password" %>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                  Login
                </button>
              </form>
              <div class="text-center">
                <a class="small" href="<%= get_started_path %>#signupModal">Create an Account!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
