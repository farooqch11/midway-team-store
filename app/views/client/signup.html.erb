                        <input type="text" required class="form-control form-control-user" name="team_admin[first_name]" placeholder="First Name">
                      </div>
                    </section>
                    <section class='xs-wizard-question'>
                      <h4>8. Last name</h4>
                      <div class='xs-choices xs-choices-input'>
                        <input type="text" required class="form-control form-control-user" name="team_admin[last_name]" placeholder="Last Name">
                      </div>
                    </section>
                    <section class='xs-wizard-question'>
                      <h4>9. Email address</h4>
                      <div class='xs-choices xs-choices-input'>
                        <input type="email" required class="form-control form-control-user" name="team_admin[email]" placeholder="Email">
                      </div>
                    </section>
                    <section class='xs-wizard-question'>
                      <h4>10. Phone number</h4>
                      <div class='xs-choices xs-choices-input'>
                        <input type="tel" required class="form-control form-control-user" name="team_admin[phone]" placeholder="Phone">
                      </div>
                    </section>
                    <section class='xs-wizard-question'>
                      <h4>11. Password</h4>
                      <div class='xs-choices xs-choices-input'>
                        <input type="password" class="form-control form-control-user" id="team_admin_password" required name="team_admin[password]">
                      </div>
                    </section>
                    <section class='xs-wizard-question'>
                      <h4>11(a). Confirm password</h4>
                      <div class='xs-choices xs-choices-input'>
                        <input type="password" class="form-control form-control-user" required name="team_admin[confirm_password]">
                      </div>
                    </section>
                  </div>
                </div>
              <% end %>
              <div id="signup_login-form" class="" style="display: none">
                <form id="login-form" class="user" style="dipslay:none;" data-url="<%= process_login_path %>" method="POST">
                  <div class="form-group">
                    <%= email_field_tag :email, "", :class => "form-control form-control-user", :placeholder => "Enter Email Address..." %>
                  </div>
                  <div class="form-group">
                    <%= password_field_tag :password, "", :class => "form-control form-control-user", :placeholder => "Password" %>
                  </div>
                  <button type="submit" class="btn btn-primary btn-user btn-block">
                    Login
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
