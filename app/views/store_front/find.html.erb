<section class="bg-light text-center py-5">
  <div class="container">
    <h1 class="font-weight-bold mb-3">Find your store</h1>
    <h4 class="text-muted mb-4">
      Search by your <strong>TEAM</strong>, <strong>SCHOOL</strong>, or <strong>ORGANIZATION</strong> name
    </h4>

    <div class="input-group input-group-lg mx-auto" style="max-width: 600px;">
     <input type="text" class="form-control rounded-pill pl-5" placeholder="ex. &quot;UA Men's Raid Short Sleeve T-Shirt&quot; or &quot;Stock&quot;" data-search-store-input>
      <div class="input-group-append ml-2">
        <button class="btn btn-primary rounded-pill px-4" type="button" id="xs-search-stores">Search</button>
      </div>
    </div>
  </div>
</section>

<section class="bg-white text-center py-5">
  <div class="container" style="max-width: 1400px; min-height: 270px;">
      <div id="store-loader" class="text-center my-5" style="display: none;">
      <div class="spinner-border text-primary" role="status" style="width: 7rem; height: 7rem;">
        <span class="sr-only">Loading...</span>
      </div>
    </div>

    <div id="results-section" style="display: none;">
      <div class="list-group" id="xs_results">
        <!-- Search results go here -->
      </div>

      <div id="load-more-wrapper" class="text-center mt-4" style="display: none;">
        <button id="load-more-btn" type="button" class="btn btn-success">Load More</button>
      </div>
    </div>

  </div>
</section>
